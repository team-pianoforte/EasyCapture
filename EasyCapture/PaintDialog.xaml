<Window x:Class="EasyCapture.PaintDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyCapture"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="PintWindow">
    <Grid>
    <StackPanel>
      <StackPanel>
        <InkCanvas Name="canvas" Cursor="Pen" UseCustomCursor="True" Margin="16, 16, 16, 16" />
      </StackPanel>

      <StackPanel Orientation="Horizontal" Margin="0,16,0,16" HorizontalAlignment="Center">
        <Button Content="Save" Margin="0,0,8,0" Padding="8, 2, 8, 2" Click="SaveButton_Click"/>
        <Button Content="Cancel" Padding="8, 2, 8, 2" Click="CancelButton_Click"/>
      </StackPanel>

    </StackPanel>

  </Grid>
</Window>
